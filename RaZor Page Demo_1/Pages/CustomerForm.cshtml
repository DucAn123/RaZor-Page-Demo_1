@page
@model RazorPagesLabA1.Pages.CustomerFormModel
@{
    var customerinfo = Model.customerInfo;
}

@if (customerinfo != null)
{
    <h3>@Model.Message</h3>
    <div asp-validation-summary="All"></div>
    <div class="card-body">
        <p><strong>Customer name:</strong> @customerinfo.CustomerName</p>
        <p><strong>Customer email:</strong> @customerinfo.Email</p>
        <p><strong>Year Of Birth:</strong> @customerinfo.YearOfBirth</p>
    </div>
}

<h3>Customer information</h3>
<form method="post">
    <div>
        <label asp-for="customerInfo.CustomerName"></label>
        <input asp-for="customerInfo.CustomerName" />
        <span asp-validation-for="customerInfo.CustomerName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="customerInfo.Email"></label>
        <input asp-for="customerInfo.Email" />
        <span asp-validation-for="customerInfo.Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="customerInfo.YearOfBirth"></label>
        <input asp-for="customerInfo.YearOfBirth" />
        <span asp-validation-for="customerInfo.YearOfBirth" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Send</button>
</form>
