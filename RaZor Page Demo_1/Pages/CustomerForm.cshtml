@page
@model RazorPagesLabA1.Pages.CustomerFormModel

<h3>@Model.Message</h3>

@if (Model.customerInfo != null && ModelState.IsValid)
{
    <div class="card mt-3">
        <div class="card-body">
            <p><strong>Customer name:</strong> @Model.customerInfo.CustomerName</p>
            <p><strong>Customer email:</strong> @Model.customerInfo.Email</p>
            <p><strong>Year Of Birth:</strong> @Model.customerInfo.YearOfBirth</p>
        </div>
    </div>
}

<form method="post" class="m-2 p-3 bg-light">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="customerInfo.CustomerName"></label>
        <input asp-for="customerInfo.CustomerName" class="form-control" />
        <span asp-validation-for="customerInfo.CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="customerInfo.Email"></label>
        <input asp-for="customerInfo.Email" class="form-control" />
        <span asp-validation-for="customerInfo.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="customerInfo.YearOfBirth"></label>
        <input asp-for="customerInfo.YearOfBirth" class="form-control" />
        <span asp-validation-for="customerInfo.YearOfBirth" class="text-danger"></span>
    </div>

    <button class="btn btn-primary mt-2">Send</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
